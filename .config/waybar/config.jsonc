{
	"modules-left": [
		"hyprland/workspaces",
		"hyprland/window",
		"hyprland/submap"
	],
	"modules-center": [
		"custom/updates",
		"group/time"
	],
	"modules-right": [
		"group/hardware",
		"wireplumber",
		"tray",
		"idle_inhibitor"
	],
	"group/hardware": {
		"orientation": "inherit",
		"drawer": {
			"children-class": "drawer-hw",
			"transition-left-to-right": false
		},
		"modules": [
			"battery",
			"hyprland/language",
			"backlight",
			"memory",
			"cpu",
			"temperature"
		]
	},
	"group/time": {
		"orientation": "inherit",
		"drawer": {
			"children-class": "drawer-time"
		},
		"modules": [
			"custom/binary_clock",
			"clock",
			"custom/screenrecorder"
		]
	},
	"backlight": {
		"format": "{icon} {percent}%",
		"format-icons": [
			"",
			"",
			"",
			"",
			"",
			"",
			"",
			"",
			""
		],
		"tooltip-format": "{icon} {percent}%"
	},
	"battery": {
		"format": "{icon}󱐥",
		"format-alt": "{icon}󱐥 {capacity}%",
		"format-charging": "{icon}󱐋",
		"format-critical": "{icon}!󰚥 {capacity}%",
		"format-discharging": "{icon}",
		"format-icons": [
			"󰂎",
			"󰁺",
			"󰁻",
			"󰁼",
			"󰁽",
			"󰁾",
			"󰁿",
			"󰂀",
			"󰂁",
			"󰂂",
			"󰁹"
		],
		"format-time": "{H} h {M} min",
		"full-at": 98,
		"states": {
			"good": 75,
			"low": 45,
			"critical": 15
		}
	},
	"clock": {
		"actions": {
			"on-click-right": "mode",
			"on-click-forward": "tz_up",
			"on-click-backward": "tz_down",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		},
		"calendar": {
			"mode": "year",
			"mode-mon-col": 3,
			"weeks-pos": "right",
			"on-scroll": 1,
			"on-click-right": "mode",
			"format": {
				"months": "<span color='LightSteelBlue'><b>{}</b></span>",
				"days": "<span color='White'>{}</span>",
				"weeks": "<span color='Thistle'>{}</span>",
				"weekdays": "<span color='Moccasin'><b>{}</b></span>",
				"today": "<span background='Gold' color='Black'><b>{}</b></span>"
			}
		},
		"format": "{:%a %b %e %R}",
		"format-alt": "{:%A %F %R}",
		"tooltip-format": "<span size='11pt' font='monospace'>{calendar}</span>"
	},
	"cpu": {
		"format": "{icon} {usage}%",
		"format-icons": [
			"",
			"󰪞",
			"󰪟",
			"󰪠",
			"󰪡",
			"󰪢",
			"󰪣",
			"󰪤",
			"󰪥"
		]
	},
	"custom/binary_clock": {
		"exec": "~/.local/bin/localbaseclock",
		"format": "{}",
		"interval": 5,
		"return-type": "json",
		"tooltip": true
	},
	"custom/screenrecorder": {
		"exec": "$HOME/Apps/repos/waybar-screenrecorder/screenrecorder status",
		"interval": "once",
		"signal": 1,
		"return-type": "json",
		"tooltip": true,
		"format": "{}",
		"on-click": "$HOME/Apps/repos/waybar-screenrecorder/screenrecorder toggle fullscreen",
		"on-click-right": "$HOME/Apps/repos/waybar-screenrecorder/screenrecorder toggle region"
	},
	"custom/updates": {
		"exec": "~/Apps/repos/waybar-updates-btw/updates-btw",
		"format": "{}{icon}",
		"format-icons": {
			"has-updates": " 󰏔",
			"updated": ""
		},
		"return-type": "json"
	},
	"hyprland/language": {
		"format": "󰌌 {}",
		"format-en-altgr-intl": "EN(altgr-intl)",
		"format-en-intl": "EN(intl)",
		"format-es": "ES(latam)"
	},
	"hyprland/submap": {
		"format": "{}",
		"tooltip": false
	},
	"hyprland/window": {
		"rewrite": {
			"(.*) — (.*)": "$1",
			"(.*) and \\d+ more page(.*)": "$1",
			"(.*) - Personal - Microsoft(.*)": "$1",
			"(.*) - (.*)": "$1"
		},
		"separate-outputs": true
	},
	"hyprland/workspaces": {
		"format": "{name} {windows}",
		"workspace-taskbar": {
			"enable": true,
			"update-active-window": true,
			"format": "{icon}",
			"icon-size": 22,
			"icon-theme": "Tela-circle-orange-dark",
			"on-click-window": "hyprctl dispatch focuswindow address:{address}"
		},
		"format-window-separator": " ",
		"on-scroll-down": "hyprctl dispatch workspace e-1",
		"on-scroll-up": "hyprctl dispatch workspace e+1",
		"show-special": true,
		"window-rewrite-default": "󰙵",
		"window-rewrite": {
			"class<[Bb]rave-browser.*>": "󰄛",
			"class<firefox>": "",
			"class<mousepad>": "󱩼",
			"class<org.gnome.FileRoller>": "󰗄",
			"class<com.mitchellh.ghostty>": "",
			"class<org.wezfurlong.wezterm>": "",
			"class<thunar>": "󰥨",
			"class<thunar> title<.*lmcs.*>": "󱂵",
			"class<thunderbird>": "",
			"class<vivaldi.*>": "",
			"class<zen.*>": "󰗝",
			"title<.*/ X.*>": "",
			"title<.*Discord.*>": "",
			"title<.*github.*>": "",
			"title<.*nvim.*>": "",
			"title<.*Picture.in.Picture.*>": "󰹗",
			"title<.*reddit.*>": "",
			"title<.*youtube.*>": "",
			"title<.*whatsapp.*>": ""
		}
	},
	"idle_inhibitor": {
		"format": "{icon}",
		"format-icons": {
			"activated": "󰒳",
			"deactivated": "󰒲"
		}
	},
	"keyboard-state": {
		"capslock": true,
		"format": {
			"numlock": "󰎤",
			"capslock": "󰬈 "
		},
		"format-icons": {
			"locked": " ",
			"unlocked": " "
		},
		"numlock": true
	},
	"memory": {
		"format": "{icon} {percentage}%",
		"format-icons": [
			"󰋙",
			"󰫃",
			"󰫄",
			"󰫅",
			"󰫆",
			"󰫇",
			"󰫈"
		],
		"tooltip-format": "RAM:\t{percentage}%\t{used:0.2f}/{total:0.2f}GB\nSWAP:\t{swapPercentage}%\t{swapUsed:0.2f}/{swapTotal:0.2f}GB"
	},
	"network": {
		"format": "󰛳",
		"format-alt": "{ifname}: {ipaddr}/{cidr}",
		"format-disconnected": "{ifname} 󰲛",
		"format-icons": [
			"󰤯",
			"󰤟",
			"󰤢",
			"󰤥",
			"󰤨"
		],
		"format-linked": "{ifname} (No IP) 󰌙",
		"tooltip-format-ethernet": "Interface:\t\t{ifname}\nIP:\t\t\t{ipaddr}\nMask:\t\t{cidr}\nGateway:\t\t{gwaddr}",
		"tooltip-format-wifi": "SSID:\t\t{essid}\nSignal strength:\t{signalStrength}% {icon}\nInterface:\t\t{ifname}\nIP:\t\t\t{ipaddr}\nMask:\t\t{cidr}\nGateway:\t\t{gwaddr}"
	},
	"pulseaudio": {
		"format": "{format_source}{icon}",
		"format-icons": {
			"car": "󰄋",
			"default": "󰕾",
			"hands-free": "󱡏",
			"hands-free-muted": "󱡐",
			"headphone": "󰋋",
			"headphone-muted": "󰟎",
			"headset": "󰋎",
			"headset-muted": "󰋐",
			"hdmi": "󰡁",
			"hifi": "󰴸",
			"phone": "󰏲",
			"phone-muted": "󰷯",
			"portable": "󰲑",
			"speaker": "󰓃",
			"speaker-muted": "󰓄"
		},
		"format-muted": "{format_source}{icon}",
		"format-source": "󰍬 ",
		"format-source-muted": "",
		"on-click": "qpwgraph",
		"on-click-middle": "wpctl set-mute @DEFAULT_SINK@ toggle",
		"on-click-right": "wpctl set-mute @DEFAULT_SOURCE@ toggle",
		"scroll-step": 5,
		"tooltip": true,
		"tooltip-format": "Output:\t<b>{volume:3}%</b>\t{desc}"
	},
	"temperature": {
		"critical-threshold": 85,
		"format": "{icon} {temperatureC}°C",
		"format-critical": "{icon}󰈸 {temperatureC}°C",
		"format-icons": [
			"",
			"",
			"",
			"",
			""
		],
		"tooltip-format": "{temperatureC} degrees Celsius"
	},
	"tray": {
		"spacing": 5
	},
	"wireplumber": {
		"format": "{format_source}󰋋 {icon}",
		"format-icons": {
			"default": [
				"",
				"",
				"",
				"",
				"",
				""
			]
		},
		"format-muted": "{format_source}󰟎",
		"format-source": "󰍬 ",
		"format-source-muted": "",
		"on-click": "qpwgraph",
		"on-click-middle": "~/.local/bin/localvolbri volume_mute",
		"on-click-right": "~/.local/bin/localvolbri mic_mute",
		"on-scroll-down": "~/.local/bin/localvolbri volume_down",
		"on-scroll-up": "~/.local/bin/localvolbri volume_up",
		"tooltip-format": "Output:\t{volume:3}%\t{node_name}\nInput:\t{source_volume:3}%\t{source_desc}"
	}
}
