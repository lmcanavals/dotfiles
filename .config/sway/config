set {
	$mod Mod4

	$left h
	$down j
	$up k
	$right l

	$term wezterm
	$menu wofi -iIS drun | xargs swaymsg exec -- &
	
	$ssfile "Pictures/Screenshots/screenshot_$(date '+%Y%m%d_%H%M%S_%N').png"
	
	$mode_grim "grimshot: [c]opy [s]ave"
	$mode_grim_copy "grimshot copy: [a]ctive [o]utput a[r]ea [s]creen [w]indow"
	$mode_grim_save "grimshot save: [a]ctive [o]utput a[r]ea [s]creen [w]indow"
	$mode_wacom "wacom: to output [1] [2]"
	$mode_resize "resize"

	$output0 $(swaymsg -t get_outputs | jq '.[0].name')
	$output1 $(swaymsg -t get_outputs | jq '.[1].name')
	$wacom 1386:884:Wacom_Intuos_S_Pen
}

exec {
	pw-cat -p /usr/share/sounds/deepin/stereo/desktop-login.wav
	nm-applet --indicator
	systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
	dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
	eval $(gnome-keyring-daemon --start)
	export SSH_AUTH_SOCK
	gammastep-indicator
}

font pango: Carlito Regular 9
default_border pixel 1

for_window [app_id="nm-connection-editor"] floating enable
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="file-roller"] floating enable
for_window [app_id="zenity"] floating enable
for_window [title="Save File"] floating enable
for_window [title="Open File"] floating enable

### Output configuration
output * bg ~/Pictures/Dark\ Wallpapers/wallhaven-pkx2dm.jpg fill
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Input configuration
input type:keyboard {
	xkb_layout "us"
	xkb_variant "dvorak-alt-intl"
	xkb_numlock enabled
}
input type:touchpad {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

### Idle configuration
exec swayidle -w \
	timeout 300 'swaylock -f -c 000000' \
	timeout 600 'swaymsg "output * power off"' \
	resume 'swaymsg "output * power on"' before-sleep 'swaylock -f -c 000000'

include binds.swayconfig

#
# Status Bar:
bar {
	swaybar_command waybar 
}

include /etc/sway/config.d/*
