exec pw-cat -p /usr/share/sounds/deepin/stereo/desktop-login.wav
exec nm-applet --indicator
exec systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec eval $(gnome-keyring-daemon --start)
exec export SSH_AUTH_SOCK
exec gammastep-indicator

font pango: Carlito Regular 9
default_border pixel 1

for_window [app_id="nm-connection-editor"] floating enable
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="file-roller"] floating enable
for_window [title="Save File"] floating enable
for_window [title="Open File"] floating enable

set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term wezterm
set $menu wofi -iIS run | xargs swaymsg exec --

set $wacom 1386:884:Wacom_Intuos_S_Pen
set $output0 $(swaymsg -t get_outputs | jq '.[0].name')
set $output1 $(swaymsg -t get_outputs | jq '.[1].name')

### Output configuration
output * bg ~/Pictures/Dark\ Wallpapers/wallhaven-pkx2dm.jpg fill
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Input configuration
input type:keyboard {
	xkb_layout "us"
	xkb_variant "dvorak-alt-intl"
	xkb_numlock enabled
}
input type:touchpad {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

### Idle configuration
exec swayidle -w \
	timeout 300 'swaylock -f -c 000000' \
	timeout 600 'swaymsg "output * power off"' \
	resume 'swaymsg "output * power on"' before-sleep 'swaylock -f -c 000000'

include binds.swayconfig

